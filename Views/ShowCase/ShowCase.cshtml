@model ShowcaseViewModel

@{
    var dropDownData = new List<DropDownItem>
{
        new DropDownItem(){ Text = T["Email Verified"], DataState = true, DataClass = "dropDownEditor__button_success"},
        new DropDownItem(){ Text = T["Email Not Verified"], DataState = false, DataClass = "btn-danger"},
    };

    var dropDownData2 = new List<DropDownItem>
{
        new DropDownItem(){ Text = T["Approved"], DataState = Status.Approved, DataClass = "dropDownEditor__button_success"},
        new DropDownItem(){ Text = T["Denied"], DataState = Status.Denied, DataClass = "btn-danger"},
        new DropDownItem(){ Text = T["Pending"], DataState = Status.Pending, DataClass = "btn-warning"},
    };
}

<div style="background:white; overflow: auto; display: flex;align-items: flex-start;justify-content: center;">
    <div style="width:30%; padding: 1.5em; float:left;">

        <h1>@T["Textbox:"]</h1>

        <h4>@T["No label."]</h4>
        <editor type="TextBox"
                for="@Model.RequiredStringEmpty"
                labelPosition="@LabelPosition.None"
                placeholder="@T["Email"]" />

        <editor type="TextBox"
                for="@Model.NotRequiredStringEmpty"
                labelPosition="@LabelPosition.None"
                placeholder="@T["Email"]" />

        <h4>@T["Label top."]</h4>
        <editor type="TextBox"
                for="@Model.RequiredStringEmpty"
                label="@T["Email"]"
                labelPosition="@LabelPosition.Top"
                placeholder="@T["Email"]" />

        <editor type="TextBox"
                for="@Model.NotRequiredStringEmpty"
                label="@T["Email"]"
                labelPosition="@LabelPosition.Top"
                placeholder="@T["Email"]" />

        <h4>@T["Label on border."]</h4>
        <editor type="TextBox"
                for="@Model.RequiredStringEmpty"
                label="@T["Email"]"
                labelPosition="@LabelPosition.Border"
                placeholder="@T["Email"]" />

        <editor type="TextBox"
                for="@Model.NotRequiredStringEmpty"
                label="@T["Email"]"
                labelPosition="@LabelPosition.Border"
                placeholder="@T["Email"]" />
    </div>
    <div style="width:30%; padding: 1.5em; float:left">

        <h1>@T["Checkbox:"]</h1>

        <h4>@T["Label on right"]</h4>
        <editor Type="CheckBox"
                for="@Model.CheckboxFalse"
                label="@T["Checkbox default false"]" />

        <h4>@T["Label on left"]</h4>
        <editor Type="CheckBox"
                for="@Model.CheckboxTrue"
                label="@T["Checkbox default true"]"
                labelPosition="@LabelPosition.Left" />
    </div>
    <div style="width:30%; padding: 1.5em; float:left">
        <h1>@T["Bootstrap dropdown:"]</h1>

        <h4>@T["Hide selected from list"]</h4>
        <editor type="DropDown"
                for="@Model.CheckboxFalse"
                DropDownContainerId="downContainerId2"
                ButtonContainerId="buttonContainerId2"
                ButtonId="buttonId2"
                DropDownData="@dropDownData"
                Label="@T["Dropdown 1"]"
                HideSelectedFromDropDownList="true" />

        <h4>@T["Don't hide selected from list"]</h4>
        <editor type="DropDown"
                for="@Model.Status"
                DropDownContainerId="downContainerId1"
                ButtonContainerId="buttonContainerId1"
                ButtonId="buttonId1"
                Label="@T["Dropdown 2"]"
                DropDownData="@dropDownData2" />
    </div>
</div>
